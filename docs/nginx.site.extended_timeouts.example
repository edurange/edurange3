server {
    listen 443 ssl;
    server_name DOMAIN_TO_BE_REPLACED;

    ssl_certificate /etc/letsencrypt/live/DOMAIN_TO_BE_REPLACED/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/DOMAIN_TO_BE_REPLACED/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Extended timeout settings - placed at server level for all locations
    proxy_connect_timeout       60s;
    proxy_send_timeout          60s;
    proxy_read_timeout          600s;
    
    # Client timeouts
    client_max_body_size        100M;
    client_body_timeout         60s;
    client_header_timeout       60s;
    send_timeout                60s;
    
    # Buffer settings
    proxy_buffering             on;
    proxy_buffer_size           128k;
    proxy_buffers               4 256k;
    proxy_busy_buffers_size     256k;

    # Main frontend location
    location / {
        # Use IP instead of localhost to avoid DNS resolution issues
        proxy_pass http://127.0.0.1:3663/;
        
        # Essential headers
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support for Vite dev server
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_cache_bypass $http_upgrade;
        
        # Disable proxy buffering for real-time updates
        proxy_buffering off;
    }

    # API endpoints
    location /api/ {
        # Use IP instead of localhost
        proxy_pass http://127.0.0.1:5000/api/;
        
        # Essential headers
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # HTTP version
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }
    
    # Special handling for AI hint generation endpoint
    location /api/query_slm {
        proxy_pass http://127.0.0.1:5000/api/query_slm;
        
        # Extended timeouts for AI processing
        proxy_connect_timeout       60s;
        proxy_send_timeout          60s;
        proxy_read_timeout          900s;  # 15 minutes
        
        # Essential headers
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Larger buffers for AI responses
        proxy_buffer_size           256k;
        proxy_buffers               8 256k;
        proxy_busy_buffers_size     512k;
        
        # HTTP version
        proxy_http_version 1.1;
        proxy_set_header Connection "";
    }
    
    # SSH WebSocket
    location /ssh {
        proxy_pass http://127.0.0.1:31337;
        
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Authentication cookies
        proxy_set_header X-JWT-Token $cookie_edurange3_jwt;
        proxy_set_header X-CSRF-Token $cookie_X-XSRF-TOKEN;

        # WebSocket settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_cache_bypass $http_upgrade;
    }
    
    # Chat WebSocket
    location /chat {
        proxy_pass http://127.0.0.1:31338;
        
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Authentication cookies
        proxy_set_header X-JWT-Token $cookie_edurange3_jwt;
        proxy_set_header X-CSRF-Token $cookie_X-XSRF-TOKEN;
        
        # WebSocket settings
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_cache_bypass $http_upgrade;
    }
}

# WebSocket connection upgrade mapping (place at http level, not server level)
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}